@{
    ViewData["Title"] = "Create or Edit";
}
@model ExpenseTracker.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or edit</h1>

</div>
<form asp-action="CreateOrEditForm">
    @* <label class="mt-4">Id</label> *@
    <input hidden class="form-control" type="number" placeholder="0" asp-for="Id"/>
    <label class="mt-4">Value $</label>
    <input class="form-control" type="number" placeholder="0" step="0.01" asp-for="Amount"/>
    <label class="mt-4">Description</label>
    <input class="form-control" type="text" placeholder="Description" asp-for="Title" />
    <input asp-for="Date" type="date" /><br />
    <button type="submit" class="btn btn-primary mt-4 ">Submit</button>
</form>